{
  "name": "ess-portal-backend",
  "version": "1.0.0",
  "description": "SAP ESS Portal Backend Service",
  "dependencies": {
    "@sap/cds": "^7.0.0",
    "express": "^4.18.0",
    "axios": "^1.3.0",
    "dotenv": "^16.0.0",
    "@sap/xsenv": "^3.0.0"
  },
  "devDependencies": {
    "sqlite3": "^5.0.0",
    "jest": "^29.0.0",
    "supertest": "^6.0.0"
  },
  "scripts": {
    "start": "cds run",
    "watch": "cds watch",
    "build": "npm run build:srv && npm run build:db",
    "build:srv": "cds compile srv/ --to xsuaa",
    "build:db": "cds compile db/ --to sql",
    "test": "jest --coverage",
    "test:integration": "jest --testPathPattern=integration",
    "deploy": "cds deploy",
    "docker:build": "docker build -t ess-backend .",
    "docker:run": "docker run -p 4004:4004 ess-backend"
  },
  "cds": {
    "requires": {
      "db": {
        "kind": "sqlite",
        "credentials": {
          "database": "db.sqlite"
        }
      },
      "ess-service": {
        "kind": "rest",
        "credentials": {
          "url": "http://localhost:3000"
        }
      }
    }
  }
}